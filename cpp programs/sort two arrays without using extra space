// Online C++ compiler to run C++ program online
#include <iostream>
#include<algorithm>
using namespace std;
int main() {
   int arr[4]={2,3,6,7};
   int ar[3]={1,2,9};
   int j=0;
   int i=0;
  for(int i=0;i<4;i++){
       if(arr[i]>ar[j]){
          int temp=0;
          temp=arr[i];
          arr[i]=ar[j];
          ar[j]=temp;
          sort(ar,ar+3);
       }
       
   }
   for(int i=0;i<4;i++){
       cout<<arr[i]<<" ";
   }
    for(int i=0;i<3;i++){
       cout<<ar[i]<<" ";
   }
}
