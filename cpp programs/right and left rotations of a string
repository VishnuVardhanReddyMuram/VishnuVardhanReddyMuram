// Online C++ compiler to run C++ program online
#include<iostream>
#include<string.h>

using namespace std;

int main() {
 string s1;
 cin>>s1;
 int n=s1.length();
 s1=s1.append(s1);
 
 int n1=s1.length();
 cout<<n<<n1<<endl;
 cout<<s1<<endl;
 for(int i=0;i<n;i++){
     for(int j=i;j<n+i;j++){
         cout<<s1[j];
     }
     cout<<"\n";
 }
 string s2;
 int j=0;
 for(int i=n1-1;i>=0;i--){
     s2[j++]=s1[i];
 }
 cout<<s2;
 for(int i=0;i<n;i++){
     for(int j=i;j<n+i;j++){
         cout<<s2[j];
     }
     cout<<"\n";
 }
     
 
}
